<body>
    <div class="chat-container">
        <div id="chatbox"></div>
        <div class="input-area">
            <input type="text" id="userInput" placeholder="Type a message..." onkeypress="handleKeyPress(event)">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        function sendMessage() {
            var inputField = document.getElementById("userInput");
            var input = inputField.value.trim();
            if (input === "") {
                return;
            }
            var chatbox = document.getElementById("chatbox");

            // Display user message
            var userMessage = "<div class='message'>" + input + "</div>";
            chatbox.innerHTML += userMessage;

            // Clear input field
            inputField.value = "";

            // Bot replies with a delay
            setTimeout(function() {
                var botResponse = getBotResponse(input);
                var botMessage = "<div class='bot'>" + botResponse + "</div>";
                chatbox.innerHTML += botMessage;
                 chatbox.scrollTop = chatbox.scrollHeight; // Auto-scroll
            }, 1000);
        }

        function getBotResponse(input) {
            var responses = {
                "hello": "Hey there! ðŸ‘‹",
                "how are you": "I'm just a bot, but I'm doing great! ðŸ˜ƒ",
                "your name": "I'm ChatBot! ðŸ¤–",
                "bye": "Goodbye! Have a nice day! ðŸ‘‹",
                "ur fav movie" :"pushpa",
                "thinnava":"thinnanu"
            };
            var lowerInput = input.toLowerCase();
            if (responses[lowerInput]) {
                return responses[lowerInput];
            } else {
                return "I don't understand that. ðŸ¤”";
            }
        }

        function handleKeyPress(event) {
            if (event.key === "N") {
                sendMessage();
            }
        }
    </script>

</body>
